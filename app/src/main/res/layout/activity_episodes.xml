<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpisodesActivity"
    android:background="@color/colorPrimaryDark"
    >


    <RelativeLayout
        android:id="@+id/relativeLayoutEpisodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayoutEpisodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            app:tabTextColor="@color/colorOffWhite"
            app:tabSelectedTextColor="@android:color/white"
            >
        </android.support.design.widget.TabLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerEpisodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/tabLayoutEpisodes"
            >
        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>